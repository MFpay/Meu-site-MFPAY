    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MF-SYSTEM | OPERAÇÕES</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #050505; color: white; font-family: sans-serif; overflow-x: hidden; }
        .glass { background: rgba(15, 15, 15, 0.8); backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.05); }
        .view { display: none; min-height: 100vh; }
        .active-view { display: block; animation: fadeIn 0.3s ease-in-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    </style>
</head>
<body>

    <section id="view-login" class="view active-view flex items-center justify-center p-4">
        <div class="glass p-10 rounded-[45px] w-full max-w-sm text-center shadow-2xl">
            <h1 class="text-3xl font-black italic mb-2 text-[#00e38c]">MF-SYSTEM</h1>
            <p class="text-[9px] text-zinc-500 mb-8 uppercase tracking-[0.3em]">Core Business v4.0</p>
            <div class="space-y-4">
                <input type="email" id="login-email" placeholder="E-MAIL" class="w-full p-4 rounded-2xl bg-black border border-white/5 outline-none focus:border-[#00e38c] text-xs">
                <input type="password" id="login-pin" placeholder="PIN 6 DÍGITOS" class="w-full p-4 rounded-2xl bg-black border border-white/5 text-center font-bold tracking-[0.4em] outline-none focus:border-[#00e38c] text-xs">
                <button onclick="autenticar()" class="w-full py-5 bg-[#00e38c] text-black font-black rounded-2xl uppercase italic text-xs mt-4 hover:scale-105 transition">Acessar Terminal</button>
            </div>
        </div>
    </section>

    <section id="view-dash" class="view">
        <nav class="p-6 border-b border-white/5 flex justify-between items-center sticky top-0 glass z-50">
            <h1 class="text-xl font-black italic text-[#00e38c]">MF-SYSTEM</h1>
            <div class="text-right">
                <p class="text-[8px] text-zinc-500 uppercase font-bold">Saldo Disponível</p>
                <h2 id="user-saldo" class="text-xl font-black text-white">R$ 0,00</h2>
            </div>
        </nav>
        <main class="p-4 max-w-md mx-auto space-y-6 mt-4">
            <div class="grid grid-cols-2 gap-3">
                <button onclick="switchView('view-gateway')" class="bg-white text-black py-4 rounded-2xl font-black text-[10px] uppercase">Depositar</button>
                <button onclick="solicitarSaque()" class="bg-zinc-900 text-white py-4 rounded-2xl font-black text-[10px] uppercase border border-white/10">Sacar Saldo</button>
            </div>
            <div class="glass p-8 rounded-[40px] text-center">
                <p class="text-[10px] text-zinc-500 mb-4 uppercase tracking-widest">Serviços Operacionais</p>
                <div class="grid grid-cols-1 gap-4">
                    <button onclick="executarTarefa(10)" class="p-6 bg-black rounded-3xl border border-white/5 hover:border-[#00e38c] transition text-left flex justify-between items-center">
                        <div><p class="font-black text-sm uppercase">Processar Dados</p><p class="text-[9px] text-zinc-500">Custo: R$ 10,00</p></div>
                        <span class="text-[#00e38c] font-black">START</span>
                    </button>
                </div>
            </div>
            <button onclick="logout()" class="w-full text-zinc-600 text-[9px] uppercase font-bold">Sair da Conta</button>
        </main>
    </section>

    <section id="view-gateway" class="view flex items-center justify-center p-4">
        <div class="glass p-8 rounded-[40px] w-full max-w-sm text-center">
            <h1 class="text-xl font-black text-[#00e38c] mb-6">GATEWAY DE DEPÓSITO</h1>
            <input type="number" id="dep-val" placeholder="VALOR R$" class="w-full p-4 rounded-2xl bg-black border border-white/5 mb-4 text-center text-[#00e38c] font-black outline-none">
            <button onclick="processarPix()" class="w-full py-5 bg-[#00e38c] text-black font-black rounded-2xl uppercase text-xs mb-4">Gerar Pagamento</button>
            <button onclick="switchView('view-dash')" class="text-zinc-500 text-[10px] uppercase">Voltar</button>
        </div>
    </section>

    <section id="view-admin" class="view p-6">
        <h1 class="text-center text-[#00e38c] font-black text-xl mb-10 italic uppercase">Painel de Controle MF</h1>
        <div id="admin-lista" class="space-y-4 max-w-xl mx-auto"></div>
        <div class="text-center mt-10">
            <button onclick="logout()" class="bg-zinc-900 px-8 py-3 rounded-full text-[10px] uppercase font-bold border border-white/10">Deslogar Root</button>
        </div>
    </section>

    <script>
        const DB_URL = "https://api.jsonbin.io/v3/b/6990a515d0ea881f40ba65eb";
        const KEY = "$2a$10$BH1hrj8d.ptln54HlH7u/Oo2rbwnadiFrQZDHfXHEOSy2nwtswFMG";
        let currentUser = localStorage.getItem('mf_user');

        // TROCA DE TELAS
        function switchView(viewId) {
            document.querySelectorAll('.view').forEach(v => v.classList.remove('active-view'));
            document.getElementById(viewId).classList.add('active-view');
            if(viewId === 'view-dash') sync();
            if(viewId === 'view-admin') monitor();
        }

        // LOGICA DE LOGIN
        async function autenticar() {
            const e = document.getElementById('login-email').value.trim().toLowerCase();
            const p = document.getElementById('login-pin').value.trim();
            try {
                const res = await fetch(DB_URL, { headers: { "X-Master-Key": KEY }});
                const db = (await res.json()).record;
                if (db.usuarios[e] && db.usuarios[e].pin === p) {
                    localStorage.setItem('mf_user', e);
                    currentUser = e;
                    switchView(e === 'admin@mf.com' ? 'view-admin' : 'view-dash');
                } else { alert("DADOS INVÁLIDOS"); }
            } catch (err) { alert("ERRO DE CONEXÃO"); }
        }

        // SINCRONIA DE SALDO
        async function sync() {
            if(!currentUser || currentUser === 'admin@mf.com') return;
            const res = await fetch(DB_URL, { headers: { "X-Master-Key": KEY, "X-Bin-Meta": "false" }});
            const db = await res.json();
            document.getElementById('user-saldo').innerText = `R$ ${db.usuarios[currentUser].saldo.toFixed(2)}`;
        }

        // TAREFAS / OPERAÇÕES
        async function executarTarefa(custo) {
            const res = await fetch(DB_URL, { headers: { "X-Master-Key": KEY }});
            const db = (await res.json()).record;
            if(db.usuarios[currentUser].saldo < custo) return alert("SALDO INSUFICIENTE");
            db.usuarios[currentUser].saldo -= custo;
            await fetch(DB_URL, { method: 'PUT', headers: { "Content-Type": "application/json", "X-Master-Key": KEY }, body: JSON.stringify(db) });
            alert("OPERAÇÃO CONCLUÍDA!");
            sync();
        }

        // GATEWAY
        function processarPix() {
            const v = document.getElementById('dep-val').value;
            window.open(`https://wa.me/5519999351550?text=Depósito MF-PAY: R$ ${v} para ${currentUser}`);
            switchView('view-dash');
        }

        // SAQUE
        async function solicitarSaque() {
            const v = parseFloat(prompt("Valor do Saque (Mín R$ 20):"));
            if(v < 20 || isNaN(v)) return alert("VALOR INVÁLIDO");
            alert("PEDIDO DE SAQUE ENVIADO AO ADMIN!");
        }

        // MONITOR ADMIN
        async function monitor() {
            const res = await fetch(DB_URL, { headers: { "X-Master-Key": KEY, "X-Bin-Meta": "false" }});
            const db = await res.json();
            let html = '';
            for(let u in db.usuarios){
                html += `<div class="glass p-5 rounded-3xl flex justify-between items-center">
                    <div><p class="text-zinc-500">${u}</p><p class="text-[#00e38c] font-black">R$ ${db.usuarios[u].saldo.toFixed(2)}</p></div>
                    <button onclick="ajustarSaldo('${u}', 50)" class="bg-[#00e38c] text-black px-4 py-2 rounded-xl font-black">+50</button>
                </div>`;
            }
            document.getElementById('admin-lista').innerHTML = html;
        }

        async function ajustarSaldo(email, val) {
            const res = await fetch(DB_URL, { headers: { "X-Master-Key": KEY }});
            const db = (await res.json()).record;
            db.usuarios[email].saldo += val;
            await fetch(DB_URL, { method: 'PUT', headers: { "Content-Type": "application/json", "X-Master-Key": KEY }, body: JSON.stringify(db) });
            monitor();
        }

        function logout() { localStorage.clear(); location.reload(); }

        // AUTO-LOGIN
        if(currentUser) switchView(currentUser === 'admin@mf.com' ? 'view-admin' : 'view-dash');
        setInterval(() => { if(currentUser) currentUser === 'admin@mf.com' ? monitor() : sync(); }, 7000);
    </script>
</body>
</html>
